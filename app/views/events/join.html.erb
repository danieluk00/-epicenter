<div class="join-wrapper joinpage" data-time="<%=@event.created_at%>" data-deadline="<%=@event.registration_deadline%>" data-id="<%=@event.event_token%>">

  <div class="home-container">
      <h1 class="title-h1" ><%= @event.event_name %></h1>
      <h2 class="title-h2" style="text-align: center"><span class="animated rubberBand"><strong><%= @organiser.name %></strong></span> has invited you to meet on <span class="animated tada"><strong><%=@event.start_dt.strftime("%A %e %b at %l:%M%P") %></strong></span>.</h2>

    <div class="image-container">
     <%= image_tag('having_fun.png') %>
    </div>

    <%= render 'shared/users' %>

    <p class="join-padding">Once everyone’s joined, we’ll calculate the central point and recommend a nearby venue that’s good for everyone.</p>

    <div class="image-container" class="join-padding">
     <%= image_tag('dark_map.png') %>
    </div>


    <div id="clockdiv"></div>
    <p class="title-h2-centre">Time left to join</p>

    <div class="main-button-container">
      <% if @organiser %>
        <%= link_to(new_user_path) do %>
          <button class="main-button">I'm in!</button>
        <% end %>
      <% end %>
    </div>

  </div>

</div>
